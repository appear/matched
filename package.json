{
  "name": "matched",
  "version": "1.0.0",
  "description": "matched client",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./",
    "lint:fix": "eslint --fix",
    "prettier": "prettier --check \"./**/*.{json,yaml,md}\"",
    "prettier:fix": "prettier --write \"./**/*.{json,yaml,md}\"",
    "build": "cross-env APP_PROFILES=real next build",
    "build:local": "cross-env APP_PROFILES=local next build",
    "start": "next start -p 3333",
    "dev": "cross-env APP_PROFILES=local next dev -p 3333"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appear/matched.git"
  },
  "keywords": [],
  "author": "olaf",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/appear/matched/issues"
  },
  "homepage": "https://github.com/appear/matched#readme",
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "cross-env": "^7.0.3",
    "csstype": "^3.0.7",
    "eslint-config-olaf": "^0.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.5.4",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "core-js": "^3.14.0",
    "next": "^11.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0"
  },
  "lint-staged": {
    "**/*.{json,yaml,md}": "prettier --check",
